{
    "name": "KNOW-IT-ALL",
    "version": "1.0",
    "description": "Поиск информации о непонятных словах на веб страницах",
    "manifest_version": 2,
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js", "js/popup.js", "js/jquery.min.js", "js/background.js", "js/so.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Поиск информации о непонятных словах на веб страницах"
    },
    "web_accessible_resources": [
        "modal.html","modal2.html", "modal-logic.html", "js/injected.js"
    ],

    "permissions": [
        "activeTab"
    ]
    
}